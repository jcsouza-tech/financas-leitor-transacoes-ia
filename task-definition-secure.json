{
    "family": "financas-leitor-transacoes-ia",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "1024",
    "memory": "2048",
    "executionRoleArn": "arn:aws:iam::772160502222:role/ecsTaskExecutionRole",
    "containerDefinitions": [
      {
        "name": "leitor-transacoes-ia",
        "image": "jcsouzafirst/financas-leitor-transacoes-ia:latest",
        "essential": true,
        "portMappings": [
          {
            "containerPort": 8080,
            "protocol": "tcp"
          }
        ],
        "healthCheck": {
          "command": ["CMD-SHELL", "curl -f http://localhost:8080/actuator/health || exit 1"],
          "interval": 30,
          "timeout": 5,
          "retries": 3,
          "startPeriod": 120
        },
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/financas-leitor-transacoes-ia",
            "awslogs-region": "us-east-1",
            "awslogs-stream-prefix": "ecs"
          }
        },
        "environment": [
          {"name": "SPRING_PROFILES_ACTIVE", "value": "prod"},
          {"name": "SPRING_DATASOURCE_URL", "value": "jdbc:mysql://financas-prd-mysql.cyr6a800ez9a.us-east-1.rds.amazonaws.com:3306/mysql"},
          {"name": "SPRING_DATASOURCE_USERNAME", "value": "appuser"},
          {"name": "FLYWAY_ENABLED", "value": "false"},
          {"name": "AI_PROVIDER", "value": "gemini"},
          {"name": "JWT_ISSUER_URI", "value": "https://cognito-idp.us-east-1.amazonaws.com/us-east-1_XXXXXXXXXX"},
          {"name": "JWT_JWK_SET_URI", "value": "https://cognito-idp.us-east-1.amazonaws.com/us-east-1_XXXXXXXXXX/.well-known/jwks.json"},
          {"name": "LOGGING_LEVEL_ROOT", "value": "DEBUG"},
          {"name": "LOGGING_LEVEL_BR_COM_FINANCAS", "value": "DEBUG"},
          {"name": "SPRING_DATASOURCE_HIKARI_CONNECTION_TIMEOUT", "value": "60000"},
          {"name": "SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE", "value": "5"},
          {"name": "SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE", "value": "1"},
          {"name": "SPRING_JPA_HIBERNATE_DDL_AUTO", "value": "create"}
        ],
        "secrets": [
          {
            "name": "SPRING_DATASOURCE_PASSWORD", 
            "valueFrom": "arn:aws:secretsmanager:us-east-1:772160502222:secret:financas/leitor-transacoes-ia/prod/database:password::"
          }
        ]
      }
    ]
  }