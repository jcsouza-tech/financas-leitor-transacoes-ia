{
  "family": "secret-test",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::772160502222:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "secret-test",
      "image": "alpine:latest",
      "essential": true,
      "command": ["sh", "-c", "echo 'Secret value:' && echo $SECRET_VALUE && sleep 10"],
      "secrets": [
        {"name": "SECRET_VALUE", "valueFrom": "arn:aws:secretsmanager:us-east-1:772160502222:secret:financas/leitor-transacoes-ia/prod/database:password::"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/secret-test",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
