{
  "family": "mysql-connectivity-test",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::772160502222:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "mysql-test",
      "image": "mysql:8.0",
      "essential": true,
      "command": ["sh", "-c", "mysql -h financas-prd-mysql.cyr6a800ez9a.us-east-1.rds.amazonaws.com -u appuser -pDeleterio_Prod_Faus_8343_#$ -e 'SELECT 1 as test;' && echo 'SUCCESS: MySQL connection works!'"],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mysql-connectivity-test",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
